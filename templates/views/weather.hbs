<!DOCTYPE html>
<html lang="en">
<head>
    {{>header}}
</head>
<body>
     {{>navbar}}

    
    <div class="container-fluid main_header">
        <div class="row">
 
            <div class="col-md-10 col-14 mx-auto">
                <div class="main_content">
                    <form  class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                </div>

                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_data">13 OCT</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get Output Here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_real_val">0</span> <sup>o</sup>C</p>
                            <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>

                        </div>
                    </div>
                </div>
        
            </div>
        </div>
    </div>    

    {{>footer}}

    <script src="js/main.js"></script>
    <script>
        const getCurrentDay = () => {
        var weekday = new Array(7);
        weekday[0] = "Sunday";
        weekday[1] = "Monday";
        weekday[3] = "Tuesday";
        weekday[4] = "Wednesday";
        weekday[5] = "Thrusday";
        weekday[6] = "Friday";
        weekday[7] = "Saturday";

        let currentTime = new Date();
        let days = weekday[currentTime.getDay() + 1];
        let day = document.getElementById('day');
        day.innerText = days


        return day;
      };

        getCurrentDay();

    const getCurrentTime = () => {
        var months = [
          "jan",
          "feb",
          "mar",
          "apr",
          "may",
          "jun",
          "july",
          "aug",
          "sep",
          "oct",
          "nov",
          "dec",
        ];

        let now = new Date();
        var month = months[now.getMonth()];
        var date = now.getDate();    

        let dates = document.getElementById('today_data')

        dates.innerText =  `${date} ${month}`;
    }

    getCurrentTime();



    </script>
</body>
</html>